extends layout

block content
  h1= title 
  p laxman
  div(class="container-fluid")
        div(class="row")
            -
                let kite = [
                    {
                        "Brand": "A",
                        "price": 10,
                        "color": "Black"
                    },
                    {
                        "Brand": "B",
                        "price": 20,
                        "color": "Red"
                    },
                    {
                        "Brand": "C",
                        "price": 30,
                        "color": "Blue"
                    },                   
                ]
            each v,index in kite
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.Brand}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.price}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.color}
                
  script.                
        function buy(intemNo)
        {
              alert(`you purchased Item ${intemNo+1}`)
        }                